@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{
    Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/_PageHeader" model="(IPageHeader)Model" />

<section class="py-16">
    <div class="max-w-7xl mx-auto px-4">

        <div class="flex flex-col gap-10 md:flex-row md:justify-between">

            <!-- CONTENT (Full width on mobile, right on desktop) -->
            <div class="w-full md:w-8/12 flex flex-col gap-6 order-1 md:order-2">
                @Html.Raw(Model.ServiceDetailBody)
            </div>

            <!-- DIVIDER (only desktop) -->
            <div class="hidden md:block w-px bg-gray-300"></div>

            <!-- ASIDE (moves below on mobile) -->
            <aside class="w-full md:w-3/12 flex flex-col gap-6 order-2 md:order-1">
                @Html.GetBlockListHtml(Model.ServiceDetailAsides)
            </aside>

        </div>

    </div>
</section>

@if (Model.ServiceDetailSections != null && Model.ServiceDetailSections.Any())
{
    @Html.GetBlockListHtml(Model.ServiceDetailSections)
}
