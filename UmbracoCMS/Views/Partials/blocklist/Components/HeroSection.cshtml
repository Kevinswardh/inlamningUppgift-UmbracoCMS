@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative overflow-hidden">

    <!-- Bakgrundsbild -->
    <div class="relative w-full h-[420px] md:h-[500px] lg:h-[552px]">
        @if (content.HeroBgImage != null)
        {
            <img src="@content.HeroBgImage.Url()"
                 alt="Hero background"
                 class="absolute inset-0 w-full h-full object-cover" />
        }
    </div>

    <!-- Textruta (lägg ovanpå bilden) -->
    <div class="absolute inset-0 flex items-center">
        <div class="max-w-[570px] px-6 mx-auto md:ml-[6%] md:text-left text-center z-10">

            <h1 class="text-[36px] md:text-[48px] lg:text-[70px] font-extrabold leading-tight text-[var(--color-primary)]">
                @content.HeroTitle
            </h1>

            <div class="mt-4 mb-6 rte text-[var(--color-gray-400)]">
                @Html.Raw(content.HeroText)
            </div>

            @if (content.HeroLink != null)
            {
                <a href="@content.HeroLink.Url"
                   class="inline-block px-9 py-3 rounded font-bold no-underline
                              bg-[var(--color-primary)] text-[var(--color-white)]
                              hover:bg-[var(--color-main-light)] transition">
                    @content.HeroLink.Name
                </a>
            }

        </div>
    </div>

    <!-- valfri overlay för bättre kontrast (exempel) -->
    <div class="absolute inset-0 bg-[rgba(255,255,255,0.15)] pointer-events-none"></div>

</section>
