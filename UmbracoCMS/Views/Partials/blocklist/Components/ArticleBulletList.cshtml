@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.Blocks;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<BlockListItem<ArticleBulletList>>

<section class="my-10">

    @if (!string.IsNullOrWhiteSpace(Model.Content.Title))
    {
        <h3 class="text-xl font-semibold mb-3">@Model.Content.Title</h3>
    }

    @if (Model.Content.Items != null && Model.Content.Items.Any())
    {
        <ul class="list-disc pl-6 space-y-2 text-gray-700">
            @foreach (var item in Model.Content.Items)
            {
                <li>@item</li>
            }
        </ul>
    }

</section>
