@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>

@{
    var content = Model.Content;

    var heading = content.Value<string>("testimonialHeading");
    var subheading = content.Value<string>("testimonialSubheading");
    var quote = content.Value<string>("testimonialQuote");
    var rating = content.Value<IPublishedContent>("testimonialRating");
    var person = content.Value<string>("testimonialPerson");
    var title = content.Value<string>("testimonialTitle");
    var image = content.Value<IPublishedContent>("testimonialImage");
}

<section class="bg-[#f7f7f7] py-20">
    <div class="max-w-[1170px] mx-auto px-6 md:px-12 grid md:grid-cols-2 gap-10 items-center">
        <!-- Left: Text -->
        <div>
            @if (!string.IsNullOrWhiteSpace(subheading))
            {
                <p class="uppercase text-[#d9c3a9] font-semibold tracking-[0.08em] mb-3">
                    @subheading
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(heading))
            {
                <h2 class="text-[#4f5955] text-4xl md:text-5xl font-bold leading-tight mb-6">
                    @Html.Raw(heading)
                </h2>
            }

            @if (!string.IsNullOrWhiteSpace(quote))
            {
                <div class="text-[#535656] italic text-lg leading-relaxed mb-6 opacity-80">
                    @Html.Raw(quote)
                </div>
            }

            @if (rating != null)
            {
                <img src="@rating.Url()" alt="Rating" class="h-4 mb-4" />
            }

            @if (!string.IsNullOrWhiteSpace(person))
            {
                <p class="font-semibold text-[#4f5955]">@person</p>
            }

            @if (!string.IsNullOrWhiteSpace(title))
            {
                <p class="italic text-[#4f5955]">@title</p>
            }
        </div>

        <!-- Right: Image -->
        <div>
            @if (image != null)
            {
                <img src="@image.Url()" alt="@image.Name"
                     class="w-full max-h-[520px] object-cover rounded-md shadow-sm" />
            }
        </div>
    </div>
</section>
