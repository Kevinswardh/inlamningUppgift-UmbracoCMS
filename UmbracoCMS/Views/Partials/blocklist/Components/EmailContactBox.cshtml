@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (EmailContactBox)Model.Content;
}

<div class="relative p-6 rounded-md bg-[#555E57] overflow-hidden mb-4">

    <div class="absolute inset-0 opacity-10 pointer-events-none">
        <svg class="w-full h-full object-cover" viewBox="0 0 200 200" fill="none">
            <path d="M10 100 L190 100 M100 10 L100 190" stroke="white" stroke-width="20" />
        </svg>
    </div>

    <div class="relative z-10">

        <h4 class="text-2xl font-semibold mb-3 text-white">
            @content.Title
        </h4>

        <p class="text-base mb-5 leading-relaxed text-white">
            @content.Description
        </p>

        @using (Html.BeginUmbracoForm("SubmitContactBox", "FormSubmission"))
        {
            <input type="email"
                   name="Email"
                   required
                   placeholder="@content.Placeholder"
                   class="w-full px-4 py-3 rounded-md bg-white text-black border-none" />

            <button type="submit"
                    class="mt-4 px-6 py-2 bg-white/10 text-white rounded-md hover:bg-white/20 transition">
                Send
            </button>

            @if (TempData["contactBoxSuccess"] != null)
            {
                <p class="mt-3 text-green-300">@TempData["contactBoxSuccess"]</p>
            }
            @if (TempData["contactBoxError"] != null)
            {
                <p class="mt-3 text-red-300">@TempData["contactBoxError"]</p>
            }
        }

    </div>
</div>
