{
  "name": "Onatrix Rte",
  "alias": "Onatrix.Rte",
  "extensions": [
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.StyleMenu",
      "meta": {
        "alias": "OnatrixStyleMenu",
        "icon": "icon-palette",
        "label": "Onatrix Styles"
      },
      "items": [
        {
          "label": "Paragraphs",
          "items": [
            {
              "label": "XL – 70",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-bold"
                  }
                }
              ]
            },
            {
              "label": "L – 40",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-bold"
                  }
                }
              ]
            },
            {
              "label": "M – 20",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-bold"
                  }
                }
              ]
            },
            {
              "label": "S – 16",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-bold"
                  }
                }
              ]
            },
            {
              "label": "XS – 14",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-bold"
                  }
                }
              ]
            }
          ]
        },
        {
          "label": "Bullets",
          "data": {
            "tag": "ul",
            "class": "rte-ul"
          }
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.BrandColors",
      "meta": {
        "alias": "OnatrixBrandColors",
        "icon": "icon-palette",
        "label": "Onatrix Colors"
      },
      "items": [
        {
          "label": "Primary",
          "data": {
            "tag": "span",
            "class": "text-primary"
          },
          "appearance": {
            "style": "background-color:#F59595; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Secondary",
          "data": {
            "tag": "span",
            "class": "text-secondary"
          },
          "appearance": {
            "style": "background-color:#D9C3A9; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Body",
          "data": {
            "tag": "span",
            "class": "text-body-text"
          },
          "appearance": {
            "style": "background-color:#535656; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Body-Light",
          "data": {
            "tag": "span",
            "class": "text-body-text-100"
          },
          "appearance": {
            "style": "background-color:#999999; color:#fff; padding:5px;"
          }
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.ImageStyles",
      "meta": {
        "alias": "OnatrixImageStyles",
        "icon": "icon-picture",
        "label": "Image Styles"
      },
      "items": [
        {
          "label": "Default width",
          "data": {
            "tag": "img",
            "class": "rte-img-default"
          },
          "appearance": {
            "style": "border:1px solid #ddd; background:#f9f9f9; padding:3px;"
          }
        },
        {
          "label": "Full width",
          "data": {
            "tag": "img",
            "class": "rte-img-full"
          },
          "appearance": {
            "style": "border:1px solid #ddd; background:#e9f7ef; padding:3px;"
          }
        }
      ]
    }
  ]
}
